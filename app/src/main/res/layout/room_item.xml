<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/main_item"
    android:background="@drawable/item_radius"
    android:elevation="2dp"
    android:layout_marginTop="10dp"
    android:layout_marginHorizontal="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/room_thumbnail"
        android:layout_width="160dp"
        android:layout_height="89dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="#7E7E7E"/>

    <TextView
        android:id="@+id/tv_room_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="방 제목"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/room_thumbnail"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/tv_headcount"
        android:layout_width="23dp"
        android:layout_height="23dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_room_title"
        android:layout_marginEnd="10dp"
        android:background="@drawable/circle"
        android:gravity="top|center"
        android:elevation="2dp"
        android:paddingTop="1dp"
        android:text="14"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="14sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toEndOf="@id/room_thumbnail"
        app:layout_constraintTop_toBottomOf="@id/tv_room_title">
        <TextView
            android:id="@+id/tv_video_name_playing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="시청중인 동영상 제목아아아아아ㅏ아아앙아아아아sadfㅇ니이이아아"
            android:textSize="15sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="5dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>